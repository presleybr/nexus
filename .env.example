# =============================================================================
# NEXUS CRM - Configurações de Ambiente
# =============================================================================

# -----------------------------------------------------------------------------
# Flask
# -----------------------------------------------------------------------------
FLASK_APP=backend/app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production

# -----------------------------------------------------------------------------
# Database PostgreSQL
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_crm
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus_crm
DB_USER=postgres
DB_PASSWORD=your-database-password

# -----------------------------------------------------------------------------
# Servidor
# -----------------------------------------------------------------------------
PORT=5000
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Canopus Automation (Sistema de Consórcio)
# -----------------------------------------------------------------------------
CANOPUS_URL=https://app.canopus.com.br
CANOPUS_LOGIN=seu-login
CANOPUS_SENHA=sua-senha
CANOPUS_CODIGO_EMPRESA=seu-codigo-empresa
CANOPUS_PONTO_VENDA_DEFAULT=24627

# -----------------------------------------------------------------------------
# WhatsApp/Evolution API
# -----------------------------------------------------------------------------
EVOLUTION_API_URL=https://your-evolution-api-url.com
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=your-instance-name

# -----------------------------------------------------------------------------
# Storage (Para Render.com - usar S3 ou similar)
# -----------------------------------------------------------------------------
# Use S3, Google Cloud Storage ou Cloudflare R2 para armazenamento persistente
USE_EXTERNAL_STORAGE=false
S3_BUCKET_NAME=nexus-crm-files
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# -----------------------------------------------------------------------------
# Logs e Debug
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# -----------------------------------------------------------------------------
# Segurança
# -----------------------------------------------------------------------------
# JWT para autenticação
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_EXPIRATION_HOURS=24

# CORS (domínios permitidos)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# -----------------------------------------------------------------------------
# Playwright/Chromium
# -----------------------------------------------------------------------------
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Google Drive (para download de planilhas)
# -----------------------------------------------------------------------------
# Deixe vazio se não usar
GOOGLE_DRIVE_API_KEY=
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
